@model GestionPrj.Models.Tache

<div class="container">
    <h2>Modifier Une Tache Tache</h2>
    <form asp-action="Update" asp-controller="Tache" method="post">
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input type="text" asp-for="Description" class="form-control" id="Description" placeholder="Entrez la description">
            <span asp-validation-for="Description" class="text-danger"></span></>
        </div>
        <div class="form-group">
            <label asp-for="Estimation_Temps">Estimation du Temps</label>
            <input type="number" asp-for="Estimation_Temps" class="form-control" id="Estimation_Temps" placeholder="Entrez l'estimation du temps">
            <span asp-validation-for="Estimation_Temps" class="text-danger"></span></>
        </div>
      
        <div class="form-group">
            <label asp-for="UserStory">UserStory :</label>
            <select asp-for="UserStoryId" class="form-control">
                <option value="">Sélectionnez un UserStory</option>


                @foreach (UserStory US in ViewBag.Stories)
                {
                    <option value="@US.Id">@US.Priority</option>

                }

            </select>
        </div>
        <button type="submit" class="btn btn-primary">Modifier</button>
    </form>
</div>
